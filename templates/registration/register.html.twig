{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}
{% block stylesheets %}
    <link href="{{ asset('assets/styles/register.css')}}" rel="stylesheet">
{% endblock %}
{% block body %}
<div class="main-container">
    <div class="container-left"></div>
    <div class="container-right">
        <a href="{{ path('app_login')}}">  <img src="{{ asset('./assets/images/logo.png')}}" alt="logo" class="logo"> </a>
        <div class="form-container">
    <h1>Register</h1>
            <h2>Veuillez vous enregistrer</h2>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email, {'attr': {'placeholder': 'Email' }}) }}
        {{ form_row(registrationForm.plainPassword,
            {'attr': {'placeholder': 'Mot de passe' }}) }}

       <div class="container-agree"> {{ form_row(registrationForm.agreeTerms) }} </div>

        <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}
        </div>
    </div>
</div>
{% endblock %}
