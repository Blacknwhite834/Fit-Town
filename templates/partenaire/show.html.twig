        // Filter list script :
        jQuery(document).ready(function(){
            $('#active-btn').click(function(){
                $('.not-active-items').hide();
                $('.active-items').show();
            });
            $('#not-active-btn').click(function(){
                $('.active-items').hide();
                $('.not-active-items').show();
